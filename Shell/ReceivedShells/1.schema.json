{
    "$schema": "http://json-schema.org/schema#",
    "title": "Shell#1",
    "type": "object",
    "required": [
        "contractID",
        "senderID",
        "receiverID",
        "file",
        "conditions"
    ],
    "properties": {
        "contractID": {
            "type": "string",
            "description": "UUID generated for this contract"
        },
        "senderID": {
            "type": "object",
            "required": [
                "id"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Company id",
                    "pattern": "^1234$"
                },
                "name": {
                    "type": "string",
                    "description": "Name of the file sender"
                }
            },
            "description": "KV pair of Company id as key and Company name as value"
        },
        "receiverID": {
            "type": "string",
            "description": "KV pair of Company id as key and Company name as value"
        },
        "file": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of file to be shared",
                    "pattern": "^(AAA).*([.]log$)"
                }
            }
        },
        "conditions": {
            "type": "object",
            "description": "The conditions that apply to the shared file",
            "properties": {
                "Pay": {
                    "type": "integer",
                    "maximum": 100
                },
                "GHTTG": {
                    "type": "string"
                }
            },
            "required": [
                "Pay",
                "GHTTG"
            ]
        }
    }
}