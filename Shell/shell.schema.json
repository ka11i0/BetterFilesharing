{
    "$schema": "http://json-schema.org/schema#",
    "title": "Shell",
    "type": "object",
    "required": ["client_id", "file", "conditions"],
    "properties": {
        "client_id": {
            "type": "integer",
            "patternProperties": {
                ".*": {"type": "string"}
            },
            "description": "KV pair of Company id as key and Company name as value"
        },
        "file": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of file to be shared",
                    "pattern": "0001-*.log" // * ska vara % som Ã¤r wildcard i db
                }
            }
        },
        "conditions": {
            "type": "object",
            "description":"The conditions that apply to the shared file",
            "enum": [{"dnd": "cool", "byob": "guy"}]
        }
    }
}