{
    "$schema": "http://json-schema.org/schema#",
    "title": "Contract",
    "type": "object",
    "required": ["contractID", "senderID", "recieverID", "file", "conditions"],
    "properties": {
        "contractID": {
            "type": "string",
            "description": "UUID generated for this contract"
        },
        "senderID": {
            "type": "string",
            "description": "Organisation number for the sender of this contract"
        },
        "recieverID": {
            "type": "string",
            "description": "Organisation number for the reciever of this contract"
        },
        "file": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of file to be shared"
                },
                "filter": {
                    "type": "string",
                    "description": "The filter that is used to filter the file"
                }
            }
        },
        "conditions": {
            "type": "array",
            "description":"The conditions that apply to the shared file",
            "items": {
                "$ref": "#/definitions/condition"
            }
        }
    },
    "defenitions": {
        "condition": {
            "type": "object",
            "conditionName": {
                "type": "string",
                "description": "short condition name"
            },
            "conditionDesc": {
                "type": "string",
                "description": "explenation of condition"
            }
        }
    }
}
