{
    "$schema": "http://json-schema.org/schema#",
    "title": "Contract",
    "type": "object",
    "required": ["contractID", "senderID", "receiverID", "file", "conditions"],
    "properties": {
        "contractID": {
            "type": "string",
            "description": "UUID generated for this contract"
        },
        "senderID": {
            "type": "string",
            "description": "Organisation number for the sender of this contract"
        },
        "receiverID": {
            "type": "string",
            "description": "Organisation number for the receiver of this contract"
        },
        "file": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of file to be shared"
                },
                "filter": {
                    "type": "string",
                    "description": "The filter that is used to filter the file"
                }
            }
        },
        "conditions": {
            "type": "array",
            "description":"The conditions that apply to the shared file",
            "items": {
                "type": "string"
            }
        }
    }
}
