{
    "$schema": "http://json-schema.org/schema#",
    "title": "Contract",
    "type": "object",
    "required": ["contractID", "senderID", "recieverID", "file", "conditions"],
    "properties": {
        "contractID": {
            "type": "string",
            "description": "UUID generated for this contract"
        },
        "senderID": {
            "type": "object",
            "patternProperties": {
                ".*": {"type": "string"}
            },
            "description": "KV pair of Company id as key and Company name as value"
        },
        "recieverID": {
            "type": "object",
            "patternProperties": {
                ".*": {"type": "string"}
            }, 
            "description": "KV pair of Company id as key and Company name as value"
        },
        "file": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of file to be shared"
                },
                "filter": {
                    "type": "string",
                    "description": "The filter that is used to filter the file"
                }
            }
        },
        "conditions": {
            "type": "array",
            "description":"The conditions that apply to the shared file",
            "items": {
                "$ref": "#/definitions/condition"
            }
        }
    },
    "definitions": {
        "condition": {
            "type": "object",
            "patternProperties": {
                ".*": { "type": "string" }
            },
            "description": "KV pair of Condition name as key and Condition description as Value"
        }
    }
}
